{
  "name": "@world-engine/hex-core",
  "version": "1.0.0",
  "description": "Engine-agnostic hex grid mathematics and utilities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "dev": "tsc --watch"
  },
  "keywords": [
    "hex",
    "hexagonal",
    "grid",
    "coordinates",
    "game-development",
    "pathfinding",
    "mathematics"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}