{
  "name": "world-engine",
  "version": "1.0.3",
  "description": "A fantasy RPG with tactical hex-based combat, character creation, and strategic world exploration",
  "author": "Walter <walterdalec@github.com>",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.22",
    "honeycomb-grid": "^4.1.5",
    "konva": "^10.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^19.0.10",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "main": "electron.js",
  "scripts": {
    "start": "set NODE_OPTIONS=--max-old-space-size=2048 && react-scripts start",
    "start:full-mem": "react-scripts start",
    "start:low-mem": "set NODE_OPTIONS=--max-old-space-size=2048 && react-scripts start",
    "build": "react-scripts build",
    "postbuild": "node -e \"require('fs').copyFileSync('electron.js', 'build/electron.js')\"",
    "build:full-mem": "react-scripts build",
    "build:low-mem": "set NODE_OPTIONS=--max-old-space-size=2048 && react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "preview": "npx --yes serve -s build -l 5000",
    "preview:ps": "powershell -ExecutionPolicy Bypass -File ./start-preview.ps1",
    "deploy:gh": "npm run build && powershell -NoProfile -Command \"Copy-Item -Force build/index.html build/404.html\" && npx --yes gh-pages -d build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish=always",
    "release:win": "npm run build && electron-builder --win --publish=always",
    "release:draft": "npm run build && electron-builder --publish=onTagOrDraft",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:prerelease": "npm version prerelease --preid=beta",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "portraits:update": "node scripts/updatePortraits.js",
    "portraits:test": "node scripts/testPortraits.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "gh-pages": "^6.3.0",
    "serve": "^14.2.1",
    "wait-on": "^9.0.1",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "build": {
    "appId": "com.worldengine.app",
    "productName": "World Engine",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "walterdalec",
      "repo": "World-Engine"
    },
    "mac": {
      "category": "public.app-category.games",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}