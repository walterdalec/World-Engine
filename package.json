{
  "name": "world-engine",
  "version": "1.0.6",
  "description": "A fantasy RPG with tactical hex-based combat, character creation, and strategic world exploration",
  "author": "Walter <walterdalec@github.com>",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "ajv": "^8.0.0",
    "ajv-formats": "^2.1.1",
    "framer-motion": "^12.23.22",
    "honeycomb-grid": "^4.1.5",
    "konva": "^10.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^19.0.10",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "scripts": {
    "start": "node scripts/run-react-scripts.js start",
    "start:full-mem": "react-scripts start",
    "start:low-mem": "node scripts/run-react-scripts.js start",
    "build": "node scripts/run-react-scripts.js build",
    "build:full-mem": "react-scripts build",
    "build:low-mem": "node scripts/run-react-scripts.js build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "preview": "npx --yes serve -s build -l 5000",
    "preview:ps": "powershell -ExecutionPolicy Bypass -File ./start-preview.ps1",
    "deploy:gh": "npm run build && powershell -NoProfile -Command \"Copy-Item -Force build/index.html build/404.html\" && npx --yes gh-pages -d build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "version:prerelease": "npm version prerelease --preid=beta",
    "typecheck": "npx tsc --noEmit --skipLibCheck",
    "lint:max-warnings-rationale": "441 was chosen to match the current warning count as of 2024-06. This allows CI to pass while we work down warnings incrementally. Update this threshold as warnings are fixed.",
    "lint": "npx eslint . --max-warnings=0",
    "lint:strict": "npx eslint . --max-warnings=0",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:update": "UPDATE_GOLDENS=true vitest run",
    "bench": "tsx src/test/bench/run.ts",
    "bench:ci": "tsx src/test/bench/run.ts --ci",
    "bench:update": "tsx src/test/bench/run.ts --update-baseline",
    "eject": "react-scripts eject",
    "portraits:update": "node scripts/updatePortraits.js",
    "portraits:test": "node scripts/testPortraits.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.7.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "gh-pages": "^6.3.0",
    "jsdom": "^27.0.0",
    "serve": "^14.2.1",
    "tinybench": "^5.0.1",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
